{
    "compilerOptions": {
        "jsx": "react",
        "skipLibCheck": true,
        "noEmit": true,
        "moduleResolution": "node",
        "lib": ["dom", "es7"],
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules/**/*"],
    "include": ["packages/**/*"]
}
